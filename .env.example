# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/highway_db

# PostgreSQL (usado por docker-compose)
POSTGRES_USER=highway_user
POSTGRES_PASSWORD=highway_password
POSTGRES_DB=highway_db

# API Configuration
ENABLE_DOCS=true

# Logging Configuration
LOG_FILE=app.log
LOG_LEVEL=INFO

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=100
JWT_SECRET_KEY=local_secret_key_not_for_production
ALGORITHM=HS256

# Photo Upload Configuration
MAX_PHOTOS_PER_REQUEST=100
ALLOWED_EXTENSIONS=jpg,jpeg,png
MAX_PHOTO_FILE_SIZE=10485760 # 10 MB in bytes

# FastAPI Email Configuration
MAIL_USERNAME=mail@mail.com
MAIL_PASSWORD=pass
MAIL_FROM=mail@mail.com
MAIL_PORT=587
MAIL_SERVER=
MAIL_FROM_NAME=
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
MAIL_USE_CREDENTIALS=true
MAIL_TIMEOUT=60
MAIL_DEBUG=1
VALIDATE_CERTS=true